<form action="/reviews/comments" method="post">
  <input type="hidden" value="{{review._id}}" name="reviewId">
  <fieldset>
    <legend>Add a Note</legend>
    <!-- TITLE -->
    <div class="form-group">
      <label for="comment-title">Note Title</label><br>
      <input class="form-control"
        id="comment-title"
        type="text"
        name="title"
        placeholder="Title"/>
    </div>

    <!-- DESCRIPTION -->
    <div class="form-group">
      <label for="comment-content">Text</label><br>
      <textarea class="form-control"
      id="comment-content"
      name="content"
      rows="10"
      placeholder="Your notes..."/></textarea>
    </div>
  </fieldset>

  <!-- BUTTON -->
  <div class="form-group">
    <button class="btn btn-primary" type="submit">Save Note</button>
  </div>
</form>
